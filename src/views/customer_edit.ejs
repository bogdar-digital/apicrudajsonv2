<%-include('partials/_header');-%>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/update/<%= data.id %>?_method=PUT" method="post">
                            <div class="form-group">
                                <input type="text" name="nombre" value="<%= data.nombre%>" placeholder="Nombre" class="form-control" />
                                <div class="form-group">
                                    <input type="text" name="adress" value="<%= data.adress%>" placeholder="Falla" class="form-control" />
                                    <div class="form-group">
                                        <input type="text" name="email" value="<%= data.email%>" placeholder="Email" class="form-control" />
                                        <div class="form-group">
                                            <input type="text" name="phone" value="<%= data.phone%>" placeholder="Celular" class="form-control" />
                                        </div>
                                        <button type="submit" class="btn btn-primary">Guardar Usuario</button>
                        </form>
                        </div>
                        </div>
                        </div>
                    </div>
                </div>

                <%-include('partials/_footer');-%>